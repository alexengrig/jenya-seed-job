#!/usr/bin/env groovy

pipeline {
    agent any

    stages {
        stage('Print greeting') {
            steps {
                echo("${GREETING}, ${NAME}!")
                script {
                    if (env.PREV_NAME != null) {
                        echo("Previous name: ${PREV_NAME}")
                    }
                        echo("Previous name: none")
                    }
                    globalEnv.set('PREV_NAME', NAME)
                }
            }
        }
    }
}
